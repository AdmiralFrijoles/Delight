<XmlEditor xmlns="Delight" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="Delight ../../Delight.xsd"
           BasedOn="UIImageView" BackgroundColor="#fbfbfb"
           EnableScriptEvents="True" Module="TextMeshPro" XmlText="t:string" IsFocused="t:bool">
  <ScrollableRegion Id="ScrollableRegion" Width="100%" Height="100%" ContentAlignment="TopLeft" HasInertia="False" ScrollBounds="Clamped">
    <Region Id="XmlEditRegion" Width="500" Height="500" BackgroundColor="#ffffff" Alignment="TopLeft">
      <Region Id="XmlEditLeftMargin" Width="50" Height="21" Alignment="TopLeft" Margin="0">
        <Label Id="LineNumbersLabel" Width="50" Height="21" Font="Inconsolata-Regular SDF" FontSize="20" FontColor="#333333"
               TextAlignment="TopRight" RichText="false" OverflowMode="Overflow" EnableWordWrapping="False" Alignment="TopLeft" />
      </Region>

      <Region Id="XmlTextRegion" Width="100%" Height="100%" Margin="60,0,0,0">
        <Label Id="XmlTextLabel" Width="2000" Height="10000" Font="Inconsolata-Regular SDF" FontSize="20"
               TextAlignment="TopLeft" RichText="false" OverflowMode="Overflow" EnableWordWrapping="False" Alignment="TopLeft" />
        <Label Id="Caret" Text="_" Width="20" Height="20" Font="Inconsolata-Regular SDF" FontSize="20" FontColor="Red"
               TextAlignment="TopLeft" RichText="false" OverflowMode="Overflow" EnableWordWrapping="False" Alignment="TopLeft"
               />
      </Region>
    </Region>
  </ScrollableRegion>
  
  <!-- for debugging -->
  <Label Id="CaretElement" Width="300" Height="22" Alignment="TopRight" RichText="false" OverflowMode="Overflow"
         Font="Inconsolata-Regular SDF" FontSize="20" TextAlignment="TopRight" />
  <Label Id="DebugTextLabel" Width="300" Height="22" Alignment="TopRight" RichText="false" OverflowMode="Overflow"
       Font="Inconsolata-Regular SDF" FontSize="20" Margin="0,21,0,0" TextAlignment="TopRight" />
</XmlEditor>
