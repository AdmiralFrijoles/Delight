<DelightDesigner xmlns="Delight" BasedOn="LayoutRoot" DesignerViews="t:DesignerViewData">

  <Grid Columns="250[230],*" Rows="*">

    <!-- Right Menu -->
    <!--<Region Grid.Cell="1,2" BackgroundColor="#dcdcdc"/>-->

    <!-- Designer Content Region -->
    <ScrollableRegion Id="ScrollableContentRegion" Grid.Cell="0,1" HasInertia="False" ScrollbarVisibility="Never" Grid.CellSpan="1,2" Scroll="OnScroll" DisableMouseWheel="True">
      <Canvas Id="ContentRegionCanvas" Scale="1">
        <Region Id="ViewContentRegion">
        </Region>
      </Canvas>
    </ScrollableRegion>

    <!-- Left Panel - Content Explorer -->
    <Region Id="LeftPanel" Grid.Cell="0,0" BackgroundColor="#fdfdfd">
      <Label Text="Views" FontSize="20" Font="Ebrima" Alignment="TopLeft" Margin="28,5,0,0" Height="50" TextAlignment="Left" />
      <List IsScrollable="True" Items="{view in DesignerViews}" Alignment="Top" Margin="2,50,2,2" BackgroundColor="clear" Width="100%" Height="100%" CanReselect="True"
            ScrollableRegionContentAlignment="Top" DisableInteractionScrollDelta="1" SelectOnMouseUp="True" HasInertia="False" ItemSelected="ViewSelected">
        <Label Text="{view.Name}" FontSize="16" Height="24" Font="Ebrima" Width="100%" EnableWordWrapping="False" Margin="25,0,0,0" OverflowMode="Ellipsis" ExtraPadding="True" FontColor="#242424" />
      </List>
    </Region>

    <GridSplitter Thickness="20" />

  </Grid>

</DelightDesigner>
