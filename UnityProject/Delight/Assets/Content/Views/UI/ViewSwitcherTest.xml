<ViewSwitcherTest xmlns="Delight" BasedOn="LayoutRoot">
  <Region>
    <ToggleGroup Height="50" Spacing="10" Orientation="Horizontal" Alignment="Top">
      <Button Text="ModelBindingTest" Click="ShowModelBindingTest" ToggleValue="True" />
      <Button Text="ScrollExample" Click="ShowScrollExample" />
      <Button Text="AssetManagementTest" Click="ShowAssetManagementTest" />
      <Button Text="InputFieldExample" Click="ShowInputFieldExample" />
      <Button Text="ShowSliderExample" Click="ShowSliderExample" />
      <Button Text="ShowBindingTest" Click="ShowBindingTest" />
    </ToggleGroup>
    
    <ViewSwitcher Margin="0,50,0,0" SwitchMode="Load">
      <ModelBindingTest Id="ModelBindingTest" />
      <!-- ViewSwitcher.ChildSwitchMode="Load" -->
      <InputFieldExample Id="InputFieldExample" />
      <ScrollExample Id="ScrollExample" />
      <AssetManagementTest Id="AssetManagementTest" />
      <SliderExample Id="SliderExample" />
      <BindingTest Id="BindingTest" />
    </ViewSwitcher>
  </Region>
</ViewSwitcherTest>
