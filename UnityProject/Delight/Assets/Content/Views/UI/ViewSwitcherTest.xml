<ViewSwitcherTest xmlns="Delight" BasedOn="LayoutRoot">
  <Region>
    <ToggleGroup Width="220" Spacing="10" Orientation="Vertical" Alignment="TopLeft" Margin="20,20,0,0">
      <Button Text="ModelBinding" Click="ShowModelBindingTest" ToggleValue="True" Width="220" />
      <Button Text="ComboBox" Click="ShowComboBoxExample" Width="220" />
      <Button Text="Scroll" Click="ShowScrollExample" Width="220" />
      <Button Text="AssetManagement" Click="ShowAssetManagementTest" Width="220" />
      <Button Text="InputField" Click="ShowInputFieldExample" Width="220" />
      <Button Text="Slider" Click="ShowSliderExample" Width="220" />
      <Button Text="BindingTest" Click="ShowBindingTest" Width="220" />
    </ToggleGroup>
    
    <ViewSwitcher Margin="240,0,0,0" SwitchMode="Load">
      <ModelBindingTest Id="ModelBindingTest" Alignment="TopLeft" />
      <ComboBoxExample Id="ComboBoxExample" />
      <!-- ViewSwitcher.ChildSwitchMode="Load" -->
      <InputFieldExample Id="InputFieldExample" />
      <ScrollExample Id="ScrollExample" />
      <AssetManagementTest Id="AssetManagementTest" />
      <SliderExample Id="SliderExample" />
      <BindingTest Id="BindingTest" />
    </ViewSwitcher>
  </Region>
</ViewSwitcherTest>
